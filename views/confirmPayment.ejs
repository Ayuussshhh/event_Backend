<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confirm Payment</title>
    <script src="https://js.stripe.com/v3/"></script> <!-- Load Stripe.js -->
</head>
<body>
    <h1>Confirm Payment for <%= event.name %></h1>
    <p>Amount: $<%= event.price %></p>

    <!-- Payment Form -->
    <form id="payment-form">
        <div id="card-element">
            <!-- A Stripe Element will be inserted here. -->
        </div>
        <button id="submit">Pay Now</button>
    </form>

    <script>
        var stripe = Stripe('your_stripe_public_key'); // Replace with your Stripe public key
        var clientSecret = "<%= clientSecret %>";
        var elements = stripe.elements();
        var card = elements.create("card");
        card.mount("#card-element");

        var form = document.getElementById("payment-form");
        form.addEventListener("submit", async function (event) {
            event.preventDefault();

            const { error, paymentIntent } = await stripe.confirmCardPayment(clientSecret, {
                payment_method: {
                    card: card
                }
            });

            if (error) {
                alert(error.message);
            } else {
                if (paymentIntent.status === "succeeded") {
                    alert("Payment Successful!");
                    window.location.href = `/event/${paymentIntent.id}`;  // Redirect to confirmation page or event page
                }
            }
        });
    </script>
</body>
</html>
